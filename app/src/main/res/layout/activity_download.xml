<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:id="@+id/text_downloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:fontFamily="@font/aboreto"
        android:paddingBottom="40dp"
        android:text="THE INFORMATION ABOUT COINS IS DOWNLOADING ..."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:fontFamily="@font/aboreto"
        android:paddingBottom="40dp"
        android:text="THE INFORMATION ABOUT COINS IS DOWNLOADED!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/downloadProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/aboreto"/>

    <TextView
        android:id="@+id/text_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:fontFamily="@font/aboreto"
        android:paddingBottom="40dp"
        android:text="sorry for the delay"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/text_info_sites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:fontFamily="@font/aboreto"
        android:paddingBottom="40dp"
        android:text="the information are from this sites:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/ecb_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECB"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:fontFamily="@font/aboreto"/>

    <Button
        android:id="@+id/text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coin-database"
        android:textSize="20sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:fontFamily="@font/aboreto"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="20sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:fontFamily="@font/aboreto"
        android:visibility="gone"/>

    <Button
        android:id="@+id/redownload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:textSize="20sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:fontFamily="@font/aboreto" />

</LinearLayout>
