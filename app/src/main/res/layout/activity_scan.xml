<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/aboreto"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_scanS"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="SCAN"
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/aboreto"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btn_loginS"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="LOGIN"
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/aboreto"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btn_favoritesS"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="❤️"
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/aboreto"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btn_databaseS"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="DATABASE"
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/aboreto"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="30dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.example.bak_python.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

    <Button
        android:id="@+id/btn_erase_screenshotsC"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="erase screenshots"
        android:textSize="11sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:fontFamily="@font/aboreto"
        android:maxLines="1"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/camera_button"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Capture"
        android:textSize="11sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aboreto"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="3dp"/>

    <Button
        android:id="@+id/compare_button"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="compare"
        android:textSize="11sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aboreto"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="3dp"
        android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/click_image"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
</LinearLayout>
